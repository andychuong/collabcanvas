rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user's groupId
    function getUserGroupId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.groupId;
    }
    
    // Helper function to check if user belongs to the group
    function belongsToGroup(groupId) {
      return isAuthenticated() && getUserGroupId() == groupId;
    }
    
    // Users collection - users can read all users but only write their own
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Groups collection - only group members can read group info
    match /groups/{groupId} {
      allow read: if belongsToGroup(groupId);
      allow write: if belongsToGroup(groupId);
      
      // Canvas data within groups - only accessible by group members
      match /canvases/{canvasId}/{document=**} {
        allow read, write: if belongsToGroup(groupId);
      }
    }
  }
}
