{
  "rules": {
    ".read": false,
    ".write": false,
    "groups": {
      "$groupId": {
        ".read": "auth != null",
        "cursors": {
          "$userId": {
            ".write": "auth != null && auth.uid == $userId"
          }
        },
        "presence": {
          "$userId": {
            ".write": "auth != null && auth.uid == $userId"
          }
        },
        "selections": {
          "$userId": {
            ".write": "auth != null && auth.uid == $userId"
          }
        }
      }
    }
  }
}